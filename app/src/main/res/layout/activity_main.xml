<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context="kg.gps.iceknight.awalkintheclouds.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:weightSum="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="35dp">
            <LinearLayout
                android:layout_weight="1">
                <NumberPicker
                    android:theme="@style/MyNumberPickerTheme"
                    android:id="@+id/numberPicker1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                </NumberPicker>
                <TextView
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="km"
                    android:textSize="22dp"
                    android:layout_gravity="bottom"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1">
                <NumberPicker
                    android:theme="@style/MyNumberPickerTheme"
                    android:id="@+id/numberPicker2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    >
                </NumberPicker>
                <TextView
                    android:textSize="22dp"
                    android:textColor="#fff"
                    android:paddingLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="sec"
                    android:layout_gravity="bottom">
                </TextView>
            </LinearLayout>
        </TableRow>

        <TableRow>
            <LinearLayout
                android:layout_weight="1">
                <RadioButton
                    android:theme="@style/MyRadioButton"
                    android:id="@+id/variant1"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Variant1">
                </RadioButton>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1">
                <RadioButton
                    android:theme="@style/MyRadioButton"
                    android:id="@+id/variant2"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Variant2">
                </RadioButton>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:paddingTop="30dp">
            <Button
                android:onClick="mainBtnListener"
                android:id="@+id/mainButton"
                android:text="START"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                />
        </TableRow>

        <TableRow
            android:paddingTop="35dp">
            <EditText
                android:foreground="#fff"
                android:textColor="#fff"
                android:id="@+id/inputCoords"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/setButton"
                android:textSize="24dp"
                android:text="set"/>
        </TableRow>
    </TableLayout>
</LinearLayout>